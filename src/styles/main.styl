@import 'skeleton/normalize'
@import 'skeleton/skeleton_custom'

@import vars
@import mixins
@import fonts
@import about
@import pictures
@import 'nib'

border-radius()
  border-radius: arguments

body
  font-family: 'Josefin Sans', sans-serif;
  background: #FFFFFF

//Skeleton hack to display empty divs at its set width
.column::before,
.columns::before
   content: "\200B"

.banner
  text-align: center
  img
   width 15em
  +screen-min($tablet)
    background: #AAAA00
