@import 'vars_utils'

@import 'skeleton/normalize'
@import 'skeleton/skeleton_custom'
@import 'nib'

@import 'fonts'
@import 'about'
@import 'pictures'
@import 'header'

html
  font-size: 62.5%

body
  // font-family: 'Josefin Sans', sans-serif
  font-family: 'Raleway', sans-serif;
  font-size: 1.4rem
  font-weight: 400
  background: #FFFFFF

footer
  background-color: #efefef
  text-align: center

main
  min-height: 100%

h1   { font-size: 2.4rem; } /* =24px */

.center
  text-align: center

.index-screen
  width: 30rem
  height: 30rem
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto
  text-align: center
  img
    animation:spin 13s ease-in-out infinite
    // animation-delay: .5s
  .tagline
    font-size: 2.2rem
    font-weight: 200
    transform:scale(1,.72)
    letter-spacing: 2px
    margin: 1.5rem 0

@keyframes spin { 100% { transform:rotate(360deg); } }
