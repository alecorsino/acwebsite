header
  .relative
    text-align: center
    position: relative
  &.container
    padding: 1.5rem 0
    padding-top: 2rem
    +screen-min($tablet)
      padding: 3rem 0
  .banner
    +screen-min($tablet)
      position: absolute
      bottom: -1rem
      left: 1rem
    padding: 0
    margin: 0
    .tagline
      // animation-duration: 3s;
      // animation-delay: 1s;
      // animation-iteration-count: infinite;
      font-size: 1.1rem
      +screen-min($tablet)
        font-size: 1.5rem

    img
      height: 3.5rem
      +screen-min($tablet)
        height: 4rem
      +screen-min($screen)
        height: 5rem
      max-width: 100%
      max-height: 100%

.header-links
  +screen-min($tablet)
    float: right;
    margin-right: 3em;
  a
    // animation-delay: 2.5s;
    text-transform: uppercase;
    margin: 0 2rem
    font-size: 1.5rem
    +screen-min($mobile)
      margin-top: 2rem
    display: inline-block
    color: rgb(130, 130, 130)
    +screen-min($tablet)
      font-size: 2rem
    text-decoration: none
    vertical-align: middle;
